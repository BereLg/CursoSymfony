				<td>{{ alumno.email }}</td>
                <td>{{ alumno.curso }}</td>
				<td>
				<ul>
					<li>
						<a href="{{ path('alumno_edit', { 'id': alumno.id }) }}">Editar</a>
					</li>
					<li>
						{{ form_start(delete_form) }}
							<input type="submit" value="Borrar">
						{{ form_end(delete_form) }}
					</li>
				</ul>
				</td>
            </tr>
        </tbody>
    </table>
	</div>
    <ul>
        <li>
            <a href="{{ path('alumno_index') }}">Volver</a>
        </li>
    </ul>
