{% block title %}Informaci√≥n de Alumno{% endblock %}
{% block body %}
	<div class="titulo">{{ block('title') }} DNI {{alumno.dni}}</div>
	<br/>
	<div class="tabla">
    <table>
        <thead>
            <tr>
                <th>DNI</th>
				<th>Sexo</th>
                <th>Nombre</th>
                <th>Fecha de nacimiento</th>
				<th>Email</th>
				<th>Curso</th>
                <th>Acciones</th>
            </tr>
        </thead>
